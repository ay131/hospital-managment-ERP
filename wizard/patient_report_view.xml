<odoo>
<data>

    <record id="report_appoientment_form_view" model="ir.ui.view">
        <field name="name">report.appoientment.form.view</field>
        <field name="model">patient.report.wizard</field>
        <field name="arch" type="xml">
            <form string="appointment report">
                <group>
                    <field name="patient_id"/>
                    <field name="age"/>
                 </group>
                <footer>
                    <button name="patient_report_action" string="print"  class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="hospital_patient_report_action" model="ir.actions.act_window">
        <field name="name">patients report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_appoientment_form_view"/>
        <field name="target">new</field>
    </record>

</data>
</odoo>